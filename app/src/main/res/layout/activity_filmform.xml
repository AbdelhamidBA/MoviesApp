<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pexels1"
    android:backgroundTint="#B5000000"
    android:backgroundTintMode="src_over"
    tools:context=".Profiles.FilmForm">

    <ImageView
        android:id="@+id/ic_back_signup"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_arrowback"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cinema_film"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/cardholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto_light"
            android:text="Add Film"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/ed_filmName_addfilm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/customauthinput"
            android:drawablePadding="10dp"
            android:ems="10"
            android:textColor="@color/black"
            android:hint="FilmName"
            android:fontFamily="@font/roboto_light"
            android:inputType="text"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>


        <EditText
            android:id="@+id/ed_filmprice_addfilm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/customauthinput"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="FilmPrice"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_light"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_filmName_addfilm" />

        <EditText
            android:id="@+id/ed_datepicker_addfilm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/customauthinput"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="FilmDate"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_light"
            android:inputType="date"
            android:editable="false"
            android:clickable="true"
            android:focusable="false"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintEnd_toEndOf="@+id/ed_filmName_addfilm"
            app:layout_constraintStart_toStartOf="@+id/ed_filmName_addfilm"
            app:layout_constraintTop_toBottomOf="@+id/ed_filmprice_addfilm" />

        <EditText
            android:id="@+id/ed_timepicker_addfilm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/customauthinput"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:ems="10"
            android:hint="FilmTime"
            android:fontFamily="@font/roboto_light"
            android:inputType="date"
            android:editable="false"
            android:clickable="true"
            android:focusable="false"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintEnd_toEndOf="@+id/ed_filmName_addfilm"
            app:layout_constraintStart_toStartOf="@+id/ed_filmName_addfilm"
            app:layout_constraintTop_toBottomOf="@+id/ed_datepicker_addfilm" />

        <Spinner
            android:id="@+id/spin_cinema_addfilm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_spinner2"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/roboto_light"
            android:inputType="textEmailAddress"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintEnd_toEndOf="@+id/ed_filmName_addfilm"
            app:layout_constraintStart_toStartOf="@+id/ed_filmName_addfilm"
            app:layout_constraintTop_toBottomOf="@+id/ed_timepicker_addfilm" />

        <Spinner
            android:id="@+id/spin_room_addfilm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_spinner2"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/roboto_light"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintEnd_toEndOf="@+id/ed_filmName_addfilm"
            app:layout_constraintStart_toStartOf="@+id/ed_filmName_addfilm"
            app:layout_constraintTop_toBottomOf="@+id/spin_cinema_addfilm" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_addfilm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/customsimplebutton"
            android:fontFamily="@font/roboto_light"
            android:text="ADD"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/spin_room_addfilm"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/spin_room_addfilm"
            app:layout_constraintTop_toBottomOf="@+id/spin_room_addfilm" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>